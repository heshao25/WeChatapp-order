
<view class="container">
  <view class="wrapper">
    <view class="left-top-sign">RECOVER</view>
    <view class="welcome">
       修改密码
    </view>
    <view class="input-content">
      <view class="input-item">
        <text class="tit">新的密码</text>
        <input  type="text" placeholder="请输入新的密码"id="Password" bindinput="handleInput"/>
      </view>
      <view class="input-item">
        <text class="tit">确认新密码</text>
        <input type="password"  placeholder="请再次输入新密码" id="Repassword" bindinput="handleInput"/>
      </view>
    </view>
    <button class="confirm-btn" bindtap="tologin">完成</button>

  </view>

</view>
